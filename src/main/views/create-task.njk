{% extends "template.njk" %}

{% block content %}
  <h1 class="govuk-heading-xl">Create New Task</h1>

  <form action="/tasks/create" method="POST">
    <div class="govuk-form-group">
      <label for="title" class="govuk-label">Title</label>
      <input class="govuk-input" id="title" name="title" type="text" required>
    </div>

    <div class="govuk-form-group">
      <label for="description" class="govuk-label">Description (Optional)</label>
      <textarea class="govuk-textarea" id="description" name="description"></textarea>
    </div>

    <div class="govuk-form-group">
      <label for="status" class="govuk-label">Status</label>
      <select class="govuk-select" id="status" name="status" required>
        <option value="Not Started">Not Started</option>
        <option value="In Progress">In Progress</option>
        <option value="Completed">Completed</option>
      </select>
    </div>

    <div class="govuk-form-group">
      <label for="dueDate" class="govuk-label">Due Date</label>
      <input class="govuk-input" id="dueDate" name="dueDate" type="datetime-local" required>
    </div>

    <button type="submit" class="govuk-button">Create Task</button>
  </form>

  <a href="/" class="govuk-link">Back to Task List</a>
{% endblock %}
